<% include ../header/ %>

<section ng-app="Marketcloud.Account" style="height:100vh;background-color:#E9EBED;padding-top: 100px">
	<div class="container-fluid" ng-controller="ResetPasswordController" ng-cloak>
		<div class="row">
			<div class="col-xs-12 col-xs-offset-0 col-sm-6 col-sm-offset-3  col-lg-4 col-lg-offset-4 mb50" >
				<div>
					<div class="text-center mb50">
						<a href="/"><img src="/img/logo/new.png" style=" max-height:100px"></a>
					</div>
					<div class="card raised" ng-show="true === showSuccessMessage">
						<h3 >Password changed</h3>
						<p class="lead">You set the password correctly. You can now use it to sign in</p>
						<div >
							<a class="link" href="/" alt="Go to Homepage">Return to Homepage</a>
						</div>
						<div >
							<a class="link" href="/account/login" alt="Go to login page">Login</a>
						</div>
					</div>
					<div  class="card raised" ng-show="false === showSuccessMessage" ng-cloak>
					<div class="card-header"><h4>Set your new password</h4></div>
					<div class="form" >
						<div id="subscriptionForm">
							
							<div class="form-group"ng-class="{'has-error' : false === validation.password, 'has-success' : true === validation.password}" >
								<label for="password">Password</label>
								<input required ng-model="password"
								type="password"
								class="form-control input-lg solid"
								id="password"
								name="password"
								ng-enter="submitNewPassword()"
								placeholder="Password"
								ng-disabled="true === waiting"
								/>
							</div>
							<div class="form-group" ng-class="{'has-error' : false === validation.confirm_password, 'has-success' : true === validation.confirm_password}">
								<label for="confirm_password">Confirm password</label>
								<input ng-model="confirm_password"
										type="password"
										class="form-control input-lg solid"
										id="confirm_password"
										name="confirm_password"
										ng-enter="submitNewPassword()"
										placeholder="Confirm password"
										ng-disabled="true === waiting"/>
							</div>
							
							
						</div>
						<div id="signupError" class="alert alert-warning" ng-show="error !== null">{{error}}</div>
						
					</div>
					<div class="card-footer">
								<button
									class="btn btn-info btn-block"
									id="create_account_button"
									ng-click="submitNewPassword()"
									ng-disabled="true === waiting">
										<i class="fa fa-refresh fa-spin" ng-show="true === waiting"></i> Submit</button>
								
								
							</div>
					</div>
					<p class="mt20 text-center"><a class="link" href="/">Return to homepage</a></p>
				</div>
			</div>
		</div>
	</div>
</section>
<script src="/libs/angular/angular.js"></script>
<script type="text/javascript" src="/modules/shared/js/marketcloud.shared.module.js"></script>
<script type="text/javascript" src="/modules/shared/js/directives/ng-enter.directive.js"></script>
<script type="text/javascript" src="/modules/account/js/marketcloud.account.module.js"></script>
<script type="text/javascript" src="/modules/account/js/reset_password.controller.js"></script>
<% include ../footer %>
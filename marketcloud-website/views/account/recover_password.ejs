<% include ../header/ %>
<section ng-app="Marketcloud.Account" style="min-height:100vh;background-color: #E9EBED;">
	<div class="container-fluid" ng-controller="RecoverPasswordController">
	<div class="row">
			<div class="col-xs-12 text-center mb20" style="padding-top:50px;">
				
				<a href="/"><img src="/img/logo/new.png" style=" max-height:100px"></a>
				
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 mb50" >
				
				
				
				
				<div class="card card-raised">
					<div class="card-header"><h4>Password recovery</h3></div>
					<p class="lead" ng-show="showSuccessMessage === true" ng-cloak>We sent you an email with a link to set a new password. Check your inbox!</p>
					<div class="card-content" ng-hide="showSuccessMessage === true">
						<p>Insert the email address of the account you want to recover. You will receive an email with further instructions.</p>
						<div id="passwordRecoveryForm">
							<div class="form-group" ng-class="{'has-error' : false === validation.email, 'has-success' : true === validation.email}">
								<!--<label>Email address</label>-->
								<input required ng-model="email"
								type="email"
								class="form-control input-lg solid"
								placeholder="email@example.com"
								id="email"
								ng-enter="recoverPassword()"
								name="email"/>
							</div>
							
						</div>
						<div id="\signupError" class="alert alert-warning" ng-show="error !== null" ng-cloak>{{error}}</div>
					</div>
					<div class="card-footer">
						<button class="btn btn-info btn-block" id="login_button" ng-click="requestRecovery()" ng-disabled="waiting"><i class="fa fa-circle-o-notch fa-spin" ng-show="true === waiting" ng-cloak></i> Submit</button>
					</div>
				</div>
				
				<p class="mt20 text-center"> <a class="link" href="/" >Return to homepage</a> </p>
			</div>
		</div>
	</div>
</section>
<script src="/libs/angular/angular.js"></script>
<script type="text/javascript" src="/modules/shared/js/marketcloud.shared.module.js"></script>
<script type="text/javascript" src="/modules/shared/js/directives/ng-enter.directive.js"></script>
<script type="text/javascript" src="/modules/account/js/marketcloud.account.module.js"></script>
<script type="text/javascript" src="/modules/account/js/recover_password.controller.js"></script>
<% include ../footer %>